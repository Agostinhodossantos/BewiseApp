<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.RankingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#3453FF"
            android:layout_height="380dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#03A9F4"
                    android:alpha="0.6"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_waves_opacity"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#03A9F4"
                    android:layout_alignParentBottom="true"
                    android:alpha="0.6"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_blob"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.appbar.AppBarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        app:elevation="0dp"
                        android:theme="@style/Theme.Bewise.AppBarOverlay">

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            app:popupTheme="@style/Theme.Bewise.PopupOverlay">
                        </androidx.appcompat.widget.Toolbar>

                    </com.google.android.material.appbar.AppBarLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_ranking_time"
                        app:singleSelection="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginEnd="20dp"
                            android:layout_height="wrap_content">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/option_1"
                                android:checked="true"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                app:chipSurfaceColor="@android:color/white"
                                app:chipBackgroundColor="@android:color/white"
                                android:text="All time" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/option_2"
                                android:background="@android:color/transparent"
                                android:layout_centerInParent="true"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                app:chipSurfaceColor="@android:color/transparent"
                                app:chipBackgroundColor="@android:color/transparent"
                                android:layout_width="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_height="wrap_content"
                                android:text="This week" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/option_3"
                                android:layout_alignParentEnd="true"
                                android:textColor="@android:color/white"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_marginEnd="10dp"
                                app:chipSurfaceColor="@android:color/transparent"
                                app:chipBackgroundColor="@android:color/transparent"
                                android:layout_height="wrap_content"
                                android:text="This month" />
                        </RelativeLayout>

                    </com.google.android.material.chip.ChipGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:drawableTint="@color/white"
                                    android:drawableBottom="@drawable/ic_baseline_arrow_drop_up_24"
                                    />

                            </LinearLayout>

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/person2"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="50dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/white"
                                android:text="Helton"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="30dp"

                                android:src="@drawable/crown"
                                />
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:src="@drawable/person"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="50dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/white"
                                android:text="Adelia"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:drawableTint="@color/white"
                                android:drawableBottom="@drawable/ic_baseline_arrow_drop_up_24"
                                />


                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/person3"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="50dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/white"
                                android:text="Katia"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_tutor"
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            style="@style/CustomTopCardViewStyle"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ranking"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>